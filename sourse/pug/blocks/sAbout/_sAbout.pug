mixin service(title, descr,img)
	+e.service-item.LI
		+e.service-text
			+e.title= title
			+e.descr= descr
			+e.btn.btn.white-btn(data-fancybox="" data-type="ajax" href="modal/call.html") Подобрать
		+e.service-img
			+img(`img/svg/about-${img}.svg`)
			
